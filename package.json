    "eslint": "^9.22.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "globals": "^16.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.2.0",
